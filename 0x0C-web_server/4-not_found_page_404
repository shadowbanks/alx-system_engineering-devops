#!/usr/bin/env bash
#install nginx
apt update -y
apt install nginx -y

# set the localhost default page
echo  "Hello World!" > /var/www/html/index.html
new_str=$"\tlocation = /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=_S7WEVLbQ-Y;\n\t}"
sed -i '/^}$/i \ '"$new_str" /etc/nginx/sites-available/default

# create a default 404 error page
echo "Sorry, Not Sorry (Ceci n'est pas une page) Ahahah" > /var/www/html/404.html
sed -i 's|=404;|/404.html|' /etc/nginx/sites-available/default

err_str=$"\tlocation = /404.html {\n\t\tinternal;\n\t}"
sed -i '/^}$/i \ '"$err_str" /etc/nginx/sites-available/default

apt install ufw -y
ufw allow 'NGINX HTTP'
service nginx start
